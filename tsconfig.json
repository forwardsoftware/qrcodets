{
    "compilerOptions": {
        "declaration": true,
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}